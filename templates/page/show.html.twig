{% extends 'base.html.twig' %}

{% block title %}Page{% endblock %}

{% block content %}
    <h1>Page</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ page.id }}</td>
            </tr>
            <tr>
                <th>TitreOnglet</th>
                <td>{{ page.titreOnglet }}</td>
            </tr>
            <tr>
                <th>TitrePage</th>
                <td>{{ page.titrePage }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    <img src="{{ page.image }}" class="img-fluid" alt='{{ page.titrePage }}' style="height: 50px">
                </td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ page.texte }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ page.date ? page.date|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Actif</th>
                <td>{{ page.actif ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Ordre</th>
                <td>{{ page.ordre }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ page.slug }}</td>
            </tr>
        </tbody>
    </table>

    <div class="mb-2">
        <a href="{{ path('page_index') }}" class="btn btn-info">back to list</a>
    
        <a href="{{ path('page_edit', {'id': page.id}) }}" class="btn btn-info">edit</a>
    </div>

    {{ include('page/_delete_form.html.twig') }}
{% endblock %}
