{% extends 'base.html.twig' %}

{% block title %}Liste de contact !{% endblock %}

{% block content %}


<div >
    <div class="d-flex justify-content-around">
        <h1>Contact! </h1>
        <div class="mt-2">
            <a href="{{path('contact_add')}}" class="btn btn-success">Cr√©er un contact</a>
        </div>
        
    </div>
    

    <table class="table">
        <thead>
            <tr>
                <th>id</th>
                <th>nom</th>
                <th>prenom</th>
                <th>sanitary pass</th>
                <th></th>
            </tr>
        </thead>
            <tbody>
                {% for contact in contacts %}
                    <tr>
                        <td># {{contact.id}}</td>
                        <td>{{contact.name}}</td>
                        <td>{{contact.firstname}}</td>
                        <td>
                            {% if contact.sanitaryPass %}
                                oui
                            {% else %}
                                non
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{path('contact_detail', {id: contact.id})}}" class="btn btn-info"> detail</a>
                            <a href="{{path('contact_update', {id: contact.id})}}" class="btn btn-warning"> update</a>
                        </td>
                        
                    </tr>
                {% endfor %}
            </tbody>
    
        
    </table>

   
</div>
{% endblock %}
