{% extends 'base.html.twig' %}

{% block title %}Detail de contact !{% endblock %}

{% block content %}


<div >
    <h1>Contact {{ detail.firstname ~ ' ' ~ detail.name }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>id</th>
                <th>nom</th>
                <th>prenom</th>
                <th>sanitary pass</th>
                <th></th>
            </tr>
        </thead>
            <tbody>
                    <tr>
                        <td># {{detail.id}}</td>
                        <td>{{detail.name}}</td>
                        <td>{{detail.firstname}}</td>
                        <td>
                            {{ detail.sanitaryPass ? 'oui' : 'non' }}
                        </td>
                        <td>
                            <a href="{{path('contact_list')}}" class="btn btn-info"> retour</a>
                            <a href="{{path('contact_delete', {id: detail.id}) }}" class="btn btn-contact-delete"> delete</a>
                        </td>                        
                    </tr>
            </tbody>        
    </table>
</div>
{% endblock %}

{% block js %}
    <script>
        $(function(){
            $('.btn-contact-delete').click(function(e){
                e.preventDefault();
                if (confirm("supprimer ce contact ?")){
                    document.location.href = $(this).attr("href");
                }
            })
        })
    </script>
{% endblock %}
